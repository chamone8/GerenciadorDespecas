@model GerenciadorDespecas.Models.TipoDespesas

@{
    ViewData["Title"] = "Editar Despesas" + Model.Nome;
}

<div class="formulario">
    <h6>Editar Tipos de Despesas  @Model.Nome</h6>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit"  class="form border rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TipoDespesaId" />
                <div class="form-group">
                    <label asp-for="Nome" class="col-form-label"></label>
                    <input asp-for="Nome" class="form-control form-control-sm" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <hr/>
                <div class="form-group">
                    <input type="submit" value="Editar Tipo Despesas" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Index" class="btn btn-outline-dark btn-sm">Voltar</a>
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
