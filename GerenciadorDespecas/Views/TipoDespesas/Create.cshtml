@model GerenciadorDespecas.Models.TipoDespesas

@{
    ViewData["Title"] = "Novos Tipos Despesas";
}

<div class="formulario">

    <h4>Novos Tipos Despesas </h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" class="form border rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="col-form-label"></label>
                    <input asp-for="Nome" class="form-control form-control-sm" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <hr/>
                <div class="form-group">
                    <input type="submit" value="Criar Tipo Despesas" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Index"  class="btn btn-outline-dark btn-sm" >Voltar</a>
                </div>
            </form>
        </div>
    </div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
