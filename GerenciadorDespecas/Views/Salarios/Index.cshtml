@model IEnumerable<GerenciadorDespecas.Models.Salario>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meses)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meses.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalarioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalarioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalarioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
